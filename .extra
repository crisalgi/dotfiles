# -----------------------------------------------------------
# gitr - RELEASE
# -----------------------------------------------------------
function gitr() {
  git checkout develop
  git checkout -b release/$1
  git push origin release/$1
}

# -----------------------------------------------------------
# gith - HOTFIX
# -----------------------------------------------------------
function gith() {
  git checkout master
  git pull
  git checkout -b release/$1
  git push origin release/$1
}

# -----------------------------------------------------------
# gitf - FEATURE
# -----------------------------------------------------------
function gitf() {
  git checkout develop
  git checkout -b feature/$1
  git push origin feature/$1
}

# -----------------------------------------------------------
# gitfd - DELETE FEATURE
# -----------------------------------------------------------
function gitfd() {
  git branch -d feature/$1
  git push origin :feature/$1
}

# -----------------------------------------------------------
# gitrd - DELETE RELEASE
# -----------------------------------------------------------
function gitrd() {
  git branch -d release/$1
  git push origin :release/$1
}